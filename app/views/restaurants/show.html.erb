<div class="row justify-content-center align-item-center">
  <div class="card col-6 mx-auto">
    <div class="m-3">
      <h2 class="text-center"><%= @restaurant.name %></h2>
      <h5 class="text-center">(<%= @restaurant.category %>)</h5>
    </div>
    <ul class="list-group p-3">
      <li class="list-group-item text-center">
        <p>Address: <%= @restaurant.address %></p>
      </li>
      <li class="list-group-item text-center">
        <p>Phone: <%= @restaurant.phone_number %></p>
      </li>
    </ul>
  </div>
</div>
<div class="row justify-content-center align-item-center">
  <div class="card col-6 mx-auto">
    <div class="m-3">
      <h4 class="text-center">Reviews</h4>
    </div>
    <ul class="list-group p-3">
        <% @reviews.each do |review| %>
        <li class="list-group-item">
            <p class= "text-center">
              <%review.rating.times do%>
                ‚≠ê
              <% end %>
            </p>
            <p class="text-start"><%= review.content %></p>
        </li>
        <% end %>
    </ul>
    <div class= "d-flex justify-content-center">
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success m-3" %>
    </div>
  </div>
</div>
<div class= "d-flex justify-content-center">
  <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary m-3" %>
</div>
