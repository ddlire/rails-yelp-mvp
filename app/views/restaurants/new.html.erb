<div class="row justify-content-center align-item-center">
  <div class="card col-6 mx-auto">
    <div class="m-3">
      <h2 class="text-center">Create a new restaurant</h2>
    </div>
    <div class="m-3">
      <%= simple_form_for @restaurant, html: { class: "d-grid gap-2"} do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, collection: Restaurant::CATEGORIES %>
        <%= f.submit "New restaurant", class: "btn btn-success text-center mx-auto" %>
      <% end %>
    </div>
  </div>
</div>

<div class= "d-flex justify-content-center">
  <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary m-3" %>
</div>
