<div class="row justify-content-center align-item-center">
  <div class="card col-6 mx-auto">
    <div class="m-3">
      <h2 class="text-center">Add a review for</h2>
      <h3 class="text-center"><%= @restaurant.name %></h3>
    </div>
    <div class="m-3">
      <%= simple_form_for [@restaurant, @review], html: { class: "d-grid gap-2"} do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit "Add rating", class: "btn btn-success text-center mx-auto" %>
      <% end %>
    </div>
  </div>
</div>

<div class= "d-flex justify-content-center">
  <%= link_to "Back to the list", restaurants_path, class: "btn btn-primary m-3" %>
</div>
